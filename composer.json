{
    "name": "keboola/xls2csv-processor",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "keboola",
        "docker",
        "component"
    ],
    "autoload": {
        "psr-4": {
            "Keboola\\Xls2CsvProcessor\\": "src/Keboola/Xls2CsvProcessor"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\Xls2CsvProcessor\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/jakubbartel/keboola-php-component"
        }
    ],
    "require": {
        "php": "^7.1",
        "keboola/php-component": "dev-master",
        "league/uri": "^5.2",
        "league/flysystem": "^1.0",
        "league/flysystem-memory": "^1.0",
        "phpoffice/phpspreadsheet": "^1.2",
        "keboola/csv": "^1.2",
        "symfony/finder": "^4.0",
        "symfony/filesystem": "^4.0"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "phpstan/phpstan-shim": "^0.9.2",
        "phpunit/phpunit": "^6.5",
        "slevomat/coding-standard": "~4.0",
        "squizlabs/php_codesniffer": "~3.2",
        "mikey179/vfsStream": "^1.6"
    },
    "scripts": {
        "tests": "phpunit",
        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "ci": [
            "@phplint",
            "@phpstan",
            "@tests"
        ]
    }
}
